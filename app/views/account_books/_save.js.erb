$("ul.errors").html("")
<% if @account_book.errors.any? %>
  <% @account_book.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".account-index").html("<%= escape_javascript(render 'index') %>")
  $("#account-modal").modal("hide")
<% end %>
