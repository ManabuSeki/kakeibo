<script>
  $(function() {
      $('.datepicker').datepicker();
  });
</script>
<%= simple_form_for @account_book, remote: true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>

    <div class="control-group">
      <label class="integer required control-label" for="account_book_date">年月日</label>
      <div class="controls">
        <div class="input-append">
          <%= f.text_field :date, readonly: true , class:'form-control datepicker'%>
          <span class="add-on icon-calendar"></span>
        </div>
      </div>
    </div>
    <%= f.association :category, prompt: "カテゴリーを選択" %>
    <%= f.input :money %>
    <%= f.association :out_category , default: 1%>
    <%= f.input :memo %>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>
