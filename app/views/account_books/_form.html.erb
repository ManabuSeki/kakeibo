<script>
  $(function() {
      $('.datepicker').datepicker();
  });
</script>
<%= simple_form_for @account_book, remote: true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>
    <%= f.input :date, as: :string, label: '年月日',:input_html => {:class => 'datepicker'} %>
    <%= f.association :category, prompt: "カテゴリーを選択" %>
    <%= f.input :money %>
    <%= f.association :out_category , default: 1%>
    <%= f.input :memo %>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>
